    <TextView
        android:id="@+id/t2"
        android:layout_width="119dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="92dp"
        android:fontFamily="sans-serif-black"
